<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/tenantformbg"
    tools:context=".TenantMenu.TenantForm">




    <LinearLayout
        android:layout_width="340dp"
        android:layout_marginTop="70dp"
        android:layout_height="580dp"
        android:background="@drawable/formbg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tenant"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/fullname"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:textColor="@color/blue"
            android:hint="Tenant Full Name"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/formbg2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/contactnumber"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:textColor="@color/blue"
            android:hint="Tenant Contact Number"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/formbg2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment Type"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/apartmenttype"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/formbg2"
            android:layout_marginTop="10dp"
            android:entries="@array/apartment_type"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment Number"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/apartmentnumber"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/formbg2"
            android:layout_marginTop="10dp"
            android:entries="@array/apartment_number"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Date"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/registerdate"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:textColor="@color/blue"
            android:hint="Select Register Date"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="false"
            android:background="@drawable/formbg2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/savebtn1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/cancelbtn1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:textAlignment="center"
                android:textSize="15sp"/>

        </LinearLayout>





    </LinearLayout>

</LinearLayout>