<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/apartmentImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/apartment1"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apartment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment A"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/bedroom_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Bedroom"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/restroom_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Restroom"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Kitchen"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/livingroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Living room"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/monthly_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly: 3,000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/addTenantButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Tenant"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:layout_marginLeft="25dp"
                android:textAlignment="center"
                android:padding="3dp"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>