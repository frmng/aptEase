<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="20dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        android:padding="16dp">

        <!-- Top Row: Name and Delete Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tenantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="Jhanna Mae Tapia"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.15"
                android:contentDescription="Delete"
                android:src="@drawable/baseline_delete_24"
                android:tint="@android:color/white" />
        </LinearLayout>

        <!-- Registered Date -->
        <TextView
            android:id="@+id/registeredDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Date: 12/18/2024"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <!-- Monthly Price -->
        <TextView
            android:id="@+id/monthlyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Price: â‚±3,000"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/paymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Unpaid"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- View History Button -->
        <TextView
            android:id="@+id/viewHistoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@android:color/white"
            android:padding="6dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
