<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="20dp"
    android:elevation="4dp"
    android:radius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="12dp">

        <!-- Name -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tenantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/labelName"
            android:layout_marginStart="4dp"
            android:textColor="@color/white" />

        <!-- Edit Button -->
        <ImageView
            android:id="@+id/editButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_edit_24"
            android:layout_marginEnd="48dp" />

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_delete_24"
            android:layout_marginEnd="8dp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenantName"
            android:layout_marginTop="16dp"
            android:text="Contact Number:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenantName"
            android:layout_toEndOf="@id/contactLabel"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/white" />

        <!-- Apartment Number -->
        <TextView
            android:id="@+id/apartmentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactNumber"
            android:layout_marginTop="12dp"
            android:text="Apartment Number: "
            android:textColor="@color/white" />

        <!-- Apartment Type -->
        <TextView
            android:id="@+id/apartmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apartmentNumber"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="Apartment Type: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/takeFeeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apartmentNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Take Fee"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
