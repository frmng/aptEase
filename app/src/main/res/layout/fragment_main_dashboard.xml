<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboardbg"
    tools:context=".DashboardMenu.MainDashboard">



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/user"
            android:backgroundTint="#f9f9f9"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/registeredUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered User: 0"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:gravity="center"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center"
        android:layout_marginTop="250dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/apartment"
            android:backgroundTint="#f9f9f9"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/apartments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment: 0"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_marginRight="50dp"
            android:gravity="center"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center"
        android:layout_marginTop="400dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/tenant"
            android:backgroundTint="#f9f9f9"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tenants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenants: 4"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_marginRight="50dp"
            android:gravity="center"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center"
        android:layout_marginTop="550dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/payment"
            android:backgroundTint="#f9f9f9"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/paymentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments: 4"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>



    </LinearLayout>


</FrameLayout>